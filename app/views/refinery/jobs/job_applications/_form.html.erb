<%= form_for [refinery, :jobs, @job, @job_application], :html => { :multipart => true } do |f| %>

  <h2><%= t('.job_application_for_position') %></h2>

  <%= render '/refinery/admin/error_messages', {:object => @job_application, :include_object_name => true} %>

  <div class="form-group">
	<%= f.required_label :name %>
	<%= f.text_field :name, :class => 'form-control', :required => 'required' %>
  </div>

  <div class='form-group'>
    <%= f.required_label :email %>
    <%= f.email_field :email, :class => 'form-control', :required => 'required' %>
  </div>

  <div class='form-group'>
    <%= f.required_label :phone %>
    <%= f.telephone_field :phone, :class => 'form-control', :required => 'required' %>
  </div>

  <div class='form-group'>
    <%= f.required_label :cover_letter %>
    <%= f.text_area :cover_letter, :class => 'form-control', :required => 'required' %>
  </div>

  <div class='form-group'>
    <%= f.required_label :resume %>
    <%= f.file_field :resume %>
  </div>

  <div class="actions">
    <p class="instruction">
      <%= t('.mandatory_fields').html_safe %>
    </p>
    <%= f.submit t('.apply'), :class => 'btn btn-default' %>
  </div>

<% end %>
