<% content_for :side_body do %>
  <% if @jobs.any? %>
    <section>
      <ul id="jobs">
        <% @jobs.each do |job| %>
          <li>
            <%= link_to job.title, refinery.jobs_job_url(job) %>
          </li>
        <% end %>
      </ul>
    </section>
  <% else %>
    <%= t('.no_open_positions') %>
  <% end %>
<% end %>

<%= render :partial => "/refinery/content_page" %>
